#! /usr/bin/env python
# encoding: utf-8
import os
import builder

def build(bld):
    name = builder.appname()
    bld.bldnode.make_node('/'+name).mkdir()
    for src in bld.path.ant_glob('**/*.py'):
        node  = bld(features = 'subst',
                    source   = src,
                    target   = src.relpath())

builder.addmissing(locals())
